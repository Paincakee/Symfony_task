{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container-fluid h-100 d-flex flex-column p-0">
        <div class="row m-3 justify-content-between w-25">
            <div class="col-6 bg-dark text-white p-1 d-flex align-items-center justify-content-center p-3 border border-dark-subtle ">
                <h1 class="fs-5 m-0">{{ project.name }}</h1>
            </div>
            <div class="col-6 bg-dark text-white p-1 d-flex align-items-center justify-content-center p-3 border border-start-0 border-dark-subtle">
                <h1 class="fs-5 m-0">{{ project.user.email }}</h1>
            </div>

        </div>
        <div class="ms-3 me-3">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="#tasks" class="nav-link active text-white" id="task-tab" data-bs-toggle="tab" data-bs-target="#tasks">Tasks</a>
                </li>
                <li class="nav-item">
                    <a href="#members" class="nav-link text-white " id="member-tab" data-bs-toggle="tab" data-bs-target="#members">Members</a>
                </li>
            </ul>
        </div>

        <div class="tab-content flex-grow-1 ms-3 me-3 mb-3 ">
            <div class="tab-pane show active h-100 bg-dark overflow-y-auto p-3 text-white" id="tasks" >
                {% include 'project/_tasks.html.twig' with {'project': project} %}
            </div>
            <div class="tab-pane h-100 bg-dark overflow-y-auto text-white" id="members" >
                {% include 'project/_members.html.twig' with {'project': project} %}
            </div>
        </div>

    </div>
{% endblock %}
