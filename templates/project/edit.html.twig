{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(projectForm) }}
                <div class="form-group">
                    {{ form_label(projectForm.name, 'Project Name', {'label_attr': {'class': 'font-weight-bold'}}) }}
                    {{ form_widget(projectForm.name, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(projectForm.description, 'Description', {'label_attr': {'class': 'font-weight-bold'}}) }}
                    {{ form_widget(projectForm.description, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(projectForm.status, 'Status', {'label_attr': {'class': 'font-weight-bold'}}) }}
                    {{ form_widget(projectForm.status, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(projectForm.members, 'Members', {'label_attr': {'class': 'font-weight-bold'}}) }}
                    {{ form_widget(projectForm.members, {'attr': {'class': 'form-control', 'multiple': true}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
                {{ form_end(projectForm) }}
            </div>
        </div>
    </div>
{% endblock %}
